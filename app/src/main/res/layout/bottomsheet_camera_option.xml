<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_camera_option_panel"
    >

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_option_panel_bottomsheet_top" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/camera_option_aspect_ratio"
        android:layout_margin="@dimen/margin_option_panel_bottomsheet"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textsize_option_panel_bottomsheet_option_title"
        />
    <RadioGroup
        android:id="@+id/radioGroup_aspectRatio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/radioButton_ratio_916"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_option_panel_bottomsheet"
            android:checked="true"
            android:elevation="10dp"
            android:text="@string/camera_option_aspect_ratio_9_16"
            android:textAlignment="center"
            android:textSize="@dimen/textsize_option_panel_bottomsheet_item" />

        <RadioButton
            android:id="@+id/radioButton_ratio_34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_option_panel_bottomsheet"
            android:elevation="10dp"
            android:text="@string/camera_option_aspect_ratio_3_4"
            android:textAlignment="center"
            android:textSize="@dimen/textsize_option_panel_bottomsheet_item"
            />

        <RadioButton
            android:id="@+id/radioButton_ratio_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_option_panel_bottomsheet"
            android:elevation="10dp"
            android:text="@string/camera_option_aspect_ratio_1_1"
            android:textSize="@dimen/textsize_option_panel_bottomsheet_item"
            android:textAlignment="center"

            />
    </RadioGroup>

    <!-- white balance-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/camera_option_white_balance"
        android:layout_margin="@dimen/margin_option_panel_bottomsheet"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textsize_option_panel_bottomsheet_option_title"
        />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="insideInset"
        android:visibility="visible">

        <RadioGroup
            android:id="@+id/radioGroup_whiteBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:scrollbars="horizontal">

            <RadioButton
                android:id="@+id/radioButton_whitebalance_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textSize="@dimen/textsize_option_panel_bottomsheet_item"
                android:text="@string/camera_option_white_balance_auto" />

            <RadioButton
                android:id="@+id/radioButton_whitebalance_cloudy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_option_panel_bottomsheet_item"
                android:text="@string/camera_option_white_balance_cloudy" />

            <RadioButton
                android:id="@+id/radioButton_whitebalance_daylight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_option_panel_bottomsheet_item"
                android:text="@string/camera_option_white_balance_daylight" />

            <RadioButton
                android:id="@+id/radioButton_whitebalance_fluorescent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_option_panel_bottomsheet_item"
                android:text="@string/camera_option_white_balance_fluorescent" />

            <RadioButton
                android:id="@+id/radioButton_whitebalance_incandscent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_option_panel_bottomsheet_item"
                android:text="@string/camera_option_white_balance_incandscent" />

        </RadioGroup>
    </HorizontalScrollView>


    <!-- timer second-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/camera_option_timer_second"
        android:layout_margin="@dimen/margin_option_panel_bottomsheet"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textsize_option_panel_bottomsheet_option_title"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGroup_timerSecond"
        >

        <RadioButton
            android:id="@+id/radioButton_timersec_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textSize="@dimen/textsize_option_panel_bottomsheet_item"
            android:text="@string/camera_option_timer_second_3" />


        <RadioButton
            android:id="@+id/radioButton_timersec_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_option_panel_bottomsheet_item"
            android:text="@string/camera_option_timer_second_5" />

        <RadioButton
            android:id="@+id/radioButton_timersec_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_option_panel_bottomsheet_item"
            android:text="@string/camera_option_timer_second_10" />
    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/camera_option_frame_type"
        android:layout_margin="@dimen/margin_option_panel_bottomsheet"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textsize_option_panel_bottomsheet_option_title"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGroup_frameType"
        >

        <RadioButton
            android:id="@+id/radioButton_frameType_noFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textSize="@dimen/textsize_option_panel_bottomsheet_item"
            android:text="@string/camera_option_frame_no_frame" />

        <RadioButton
            android:id="@+id/radioButton_frameType_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textSize="@dimen/textsize_option_panel_bottomsheet_item"
            android:text="@string/camera_option_frame_frame_1" />

    </RadioGroup>



    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_option_panel_bottomsheet_bottom" />
</LinearLayout>